<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:name="example.l3m4rk.edu.githubclient.presentation.commits.views.CommitFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/commitsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="example.l3m4rk.edu.githubclient.presentation.commits.views.CommitsFragment"
        tools:listitem="@layout/item_commit"
        />

    <include layout="@layout/progress"/>

    <include layout="@layout/empty_commits"/>

    <include layout="@layout/error"/>

</FrameLayout>